<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:backgroundTint="@color/colorBackground"
    tools:context=".ui.home.HomeFragment" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="239dp"
        android:layout_height="124dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="@string/welkom_text"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivInstellingen"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfiel"
        app:srcCompat="@drawable/instellingen_button" />

    <ImageView
        android:id="@+id/ivOefeningen"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/oefeningen_home" />

    <ImageView
        android:id="@+id/ivProfiel"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/profiel_home" />

</androidx.constraintlayout.widget.ConstraintLayout>